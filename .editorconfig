root = true

# Unix-style newlines with a newline ending every file
# avoids CRLF issues on git diffs with developers using Windows, in this case the EditorConfig extension is a must!
[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
